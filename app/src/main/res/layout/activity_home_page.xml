<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".home_page">
    <RelativeLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shapebar">

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="5sp">
            <TextView
                android:id="@+id/header_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="@string/header_name"
                android:textColor="@color/white"
                android:textSize="24dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/header_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="4dp"
                android:text="@string/header_name_next"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:textStyle="bold" />
        </RelativeLayout>
    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="end|bottom"
        android:layout_marginStart="16dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="16dp"
        app:fabSize="mini"
        app:srcCompat="@drawable/profile" />
    <TextView
        android:id="@+id/codeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/codeNo"
        android:layout_below="@+id/fab"
        android:textSize="20dp"
        android:layout_marginLeft="50dp">
    </TextView>
    <EditText
        android:id="@+id/codeNo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/codeText"
        android:layout_marginLeft="90dp"
        android:hint="Enter code"
        android:textAlignment="center"
        android:layout_marginTop="40dp"
        android:textSize="22dp">
    </EditText>
    <Button
        android:id="@+id/goButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/codeNo"
        android:layout_marginLeft="150dp"
        android:text="Click"
        >
    </Button>
    <TextView
        android:id="@+id/showText"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/goButton"
        android:textSize="20dp"
        android:textAlignment="center">
    </TextView>

