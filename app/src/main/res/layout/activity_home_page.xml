<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".home_page">
    <RelativeLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shapebar">

        <RelativeLayout
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="5sp">
            <TextView
                android:id="@+id/header_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="@string/header_name"
                android:textColor="@color/white"
                android:textSize="24dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/header_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="4dp"
                android:text="@string/header_name_next"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:textStyle="bold" />
        </RelativeLayout>
    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="16dp"
        app:fabSize="mini"
        app:srcCompat="@drawable/propic" />

    <TextView
        android:id="@+id/codeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fab"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="1dp"
        android:text="@string/codeNo"
        android:textSize="18dp">
    </TextView>

    <EditText
        android:id="@+id/codeNo"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/codeText"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="20dp"
        android:height="50dp"
        android:background="@drawable/edittextborder"
        android:hint="@string/codeNoField"
        android:textAlignment="center"
        android:textSize="20dp">
    </EditText>

    <TextView
        android:id="@+id/goButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/codeNo"
        android:layout_marginLeft="84dp"
        android:layout_marginTop="10dp"
        android:background="@color/teal_200"
        android:padding="10dp"
        android:text="@string/knowCode"
        android:textColor="@color/white"
        android:textSize="18dp">
    </TextView>


    <TextView
        android:id="@+id/showText"
        android:layout_width="326dp"
        android:layout_height="173dp"
        android:layout_below="@+id/goButton"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold">

    </TextView>
    <TextView
        android:id="@+id/voiceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/voiceText"
        android:layout_below="@id/button2"
        android:textSize="16dp"
        android:paddingLeft="18dp"
        android:visibility="invisible">
    </TextView>

    <TextView
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/showText"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="15dp"
        android:background="@color/teal_200"
        android:padding="10dp"
        android:text="Voice Address"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button2"

        android:layout_marginLeft="20sp"
        android:layout_marginTop="102dp"
        android:text="@string/profile4"
        android:textColor="@color/red"
        android:textSize="18sp"
        android:textStyle="bold" />
</RelativeLayout>