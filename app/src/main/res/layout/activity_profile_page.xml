<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profilePage">

    <RelativeLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shapebar">


        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="5sp">
            <TextView
                android:id="@+id/header_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="@string/header_name"
                android:textColor="@color/white"
                android:textSize="24dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/header_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="4dp"
                android:text="@string/header_name_next"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:textStyle="bold" />
        </RelativeLayout>
    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/back_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        app:srcCompat="@drawable/back"
        app:fabSize="mini"
        />

    <TextView
        android:id="@+id/info_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/head"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="15sp"
        android:text="@string/profile3"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/img1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:layout_below="@+id/info_head"
        android:src="@drawable/profile" />

    <EditText
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15sp"
        android:text="Adiba Saira"
        android:paddingTop="5sp"
        android:paddingLeft="20sp"
        android:paddingRight="20sp"
        android:paddingBottom="5sp"
        android:background="@drawable/edittextborder"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_alignParentRight="true"
        android:layout_marginTop="18sp"
        android:layout_marginRight="30sp"
        android:text="@string/profile5"
        android:textColor="@color/green"
        android:textSize="14sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/update_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30sp"
        android:layout_marginTop="18sp"
        android:text="@string/profile6"
        android:textSize="14sp"
        android:visibility="gone"
        android:textColor="@color/green"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/r_email"
        android:layout_below="@+id/name"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:layout_marginTop="65sp"
        android:text="@string/profile2"
        android:textSize="16sp"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r_email"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:layout_marginTop="15sp"
        android:paddingTop="5sp"
        android:paddingLeft="20sp"
        android:paddingRight="20sp"
        android:paddingBottom="5sp"
        android:enabled="false"
        android:hint="@string/profile2"
        android:inputType="text"
        android:maxLines="1"
        android:minHeight="48dp"
        android:textSize="14sp"
        android:background="@drawable/edittextborder"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/p_phone"
        android:layout_below="@+id/email"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:layout_marginTop="15sp"
        android:text="@string/profile7"
        android:textSize="16sp"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/p_phone"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="15sp"
        android:layout_marginRight="15sp"
        android:paddingTop="5sp"
        android:paddingLeft="20sp"
        android:paddingRight="20sp"
        android:paddingBottom="5sp"
        android:enabled="false"
        android:hint="@string/profile7"
        android:inputType="text"
        android:maxLines="1"
        android:minHeight="48dp"
        android:background="@drawable/edittextborder"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone"
        android:layout_marginTop="105sp"
        android:layout_marginLeft="20sp"
        android:text="@string/profile4"
        android:textColor="@color/red"
        android:textSize="18sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logout"
        android:layout_marginTop="40sp"
        android:layout_centerHorizontal="true"
        android:text="@string/version"
        android:textColor="@color/black"
        android:textSize="10sp"
        />

</RelativeLayout>