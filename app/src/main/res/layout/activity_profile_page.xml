<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilePage">

    <RelativeLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shapebar">

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="5sp">
            <TextView
                android:id="@+id/header_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="@string/header_name"
                android:textColor="@color/white"
                android:textSize="24dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/header_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="4dp"
                android:text="@string/header_name_next"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:textStyle="bold" />
        </RelativeLayout>
    </RelativeLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/back_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        app:srcCompat="@drawable/back"
        app:fabSize="mini"/>
    <TextView
        android:id="@+id/info_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/head"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="15sp"
        android:text="@string/profile3"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/img1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:layout_below="@+id/info_head"
        android:src="@drawable/profile" />

    <EditText
        android:id="@+id/name"
        android:hint="@string/profileName"
        android:textAlignment="center"
        android:padding="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15sp"
        android:textSize="16sp"
        android:background="@drawable/edittextborder"
        android:editable="false" />


    <TextView
        android:id="@+id/update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-17dp"
        android:layout_marginRight="30dp"
        android:text="@string/profile5"
        android:textColor="@color/green"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/update_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_alignParentRight="true"
        android:layout_marginTop="266dp"
        android:layout_marginRight="139dp"
        android:text="@string/profile6"
        android:textColor="@color/green"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <EditText
        android:id="@+id/email"
        android:hint="@string/profileEmail"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:layout_marginTop="15dp"
        android:maxLines="1"
        android:minHeight="48dp"
        android:textSize="14sp"
        android:padding="10sp"
        android:background="@drawable/edittextborder"
        android:editable="false"/>

    <EditText
        android:id="@+id/phone"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:layout_marginTop="15sp"
        android:padding="10sp"
        android:maxLines="1"
        android:minHeight="48dp"
        android:textSize="14sp"
        android:background="@drawable/edittextborder"
        android:editable="false"/>

    <EditText
        android:id="@+id/company_name"
        android:hint="@string/profileComName"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:layout_marginTop="15sp"
        android:maxLines="1"
        android:minHeight="48dp"
        android:textSize="14sp"
        android:padding="10sp"
        android:background="@drawable/edittextborder"
        android:editable="false"/>
    <EditText
        android:id="@+id/company_id"
        android:hint="@string/profileComId"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/company_name"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:layout_marginTop="15sp"
        android:maxLines="1"
        android:minHeight="48dp"
        android:textSize="14sp"
        android:padding="10sp"
        android:background="@drawable/edittextborder"
        android:editable="false"/>

    <TextView
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/company_id"

        android:layout_marginTop="15sp"
        android:layout_marginLeft="20sp"
        android:text="@string/profile4"
        android:textColor="@color/red"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/updateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logout"
        android:layout_marginStart="25dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        android:padding="20dp"
        android:text="@string/profile7"
        android:textAlignment="center"
        android:textColor="@color/teal_200"
        android:visibility="invisible">
    </TextView>

    <TextView
        android:id="@+id/version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logout"
        android:layout_marginTop="140sp"
        android:layout_centerHorizontal="true"
        android:text="@string/version"
        android:textColor="@color/black"
        android:textSize="10sp"
        />

</RelativeLayout>