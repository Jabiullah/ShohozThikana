<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10sp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">
            <ImageView
                android:id="@+id/imageOfHouse"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/addimage"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/geoCodeValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/green"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/imageOfHouse"
                android:text="geoCodeValue" />
            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/geoCodeValue"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="Total address" />
            <TextView
                android:id="@+id/voiceFile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/address"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="voiceFile Path" />

            <TextView
                android:id="@+id/viewNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/voiceFile"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="Number of people know your address." />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>